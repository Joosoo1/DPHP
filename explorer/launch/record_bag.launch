<launch>
    <arg name="bag_path" default="Desktop"/>
    <arg name="bag_name_prefix" default="exploration"/>
    <node pkg="rosbag" type="record" name="rosbag_record_explorer"
          args="record -o $(env HOME)/$(arg bag_path)/$(arg bag_name_prefix) -e '/sensor_coverage_planner/(.*)' /robot/dlio/odom_node/pointcloud/deskewed /robot/dlio/odom_node/odom"/>
</launch>